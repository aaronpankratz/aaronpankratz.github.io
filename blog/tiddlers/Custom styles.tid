.welcomeGrid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 10px;
  grid-auto-rows: minmax(100px, auto);

  .profile {
    grid-column: 1 / 2;
    grid-row: 1;
  }

  .bio { 
    grid-column: 2 / 3;
    grid-row: 1;
  }
}
